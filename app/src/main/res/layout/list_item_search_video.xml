<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="10dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:theme="@style/CardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_search_video"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/skin_bg3" />

            <TextView
                android:id="@+id/tv_search_video_title"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/iv_search_video"
                android:clickable="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:lines="1"
                android:text="标题"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_search_video_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_search_video_title"
                android:layout_below="@id/tv_search_video_title"
                android:layout_marginTop="5dp"
                android:text="分类"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_search_video_viewcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_search_video_title"
                android:layout_below="@id/tv_search_video_category"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:text="观看次数"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_search_video"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_search_video_viewcount"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:drawableRight="@drawable/right"
                android:text="播放视频"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>