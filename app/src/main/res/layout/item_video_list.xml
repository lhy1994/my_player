<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_video"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="8dp"
        app:theme="@style/CardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_video"
                android:transitionName="@string/transition_video_pic"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/iv_video"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_video_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_video_title"
                android:layout_below="@id/tv_video_title"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:text="director"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_video_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_video_title"
                android:layout_below="@id/tv_video_director"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="actor"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_video_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_video_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@id/tv_video_actor"
                android:layout_marginTop="2dp"
                android:text="2016"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_video_title"
                android:layout_below="@id/tv_video_year"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <!--<TextView-->
            <!--android:id="@+id/tv_video_watch_count"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignLeft="@id/tv_video_title"-->
            <!--android:layout_below="@id/tv_video_time"-->
            <!--android:textSize="14sp"-->
            <!--android:layout_marginTop="2dp"-->
            <!--/>-->


            <!--<TextView-->
            <!--android:id="@+id/tv_video_brief"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignLeft="@id/tv_video_title"-->
            <!--android:layout_below="@id/tv_video_actor"-->
            <!--android:layout_marginRight="16dp"-->
            <!--android:layout_marginTop="2dp"-->
            <!--android:ellipsize="end"-->
            <!--android:maxLines="4"-->
            <!--android:text="des"-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
            <!--android:textSize="14sp" />-->

            <Button
                android:id="@+id/btn_video_more"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_video"
                android:layout_alignParentRight="true"
                android:text="more"
                android:layout_below="@id/tv_video_time"
                android:textAllCaps="true"
                android:textColor="?attr/colorAccent"
                android:textSize="14sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>