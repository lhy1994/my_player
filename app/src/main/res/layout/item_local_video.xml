<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_thumbnail_local_video"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@color/grey" />

    <TextView
        android:id="@+id/tv_title_local_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:layout_toRightOf="@id/iv_thumbnail_local_video"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_duration_local_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_title_local_video"
        android:layout_below="@id/tv_title_local_video"
        android:text="35:00"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />


    <Button
        android:id="@+id/btn_more"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_action_more"
        android:focusable="false" />

</RelativeLayout>
